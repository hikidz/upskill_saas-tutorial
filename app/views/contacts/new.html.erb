<div class="container">
  <div class="row">
    <h3 class="text-center">Nachricht an uns</h3>
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <%= form_for "/contacts" do |f| %>
          <div class="form-group">
            <%= f.label :Name %>
            <%= f.text_field :Name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Nachricht %>
            <%= f.text_area :Nachricht, class: 'form-control' %>
          </div>
          <%= f.submit 'Senden', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>