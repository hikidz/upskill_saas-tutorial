<div class="container">
  <h3 class="text-center">Nachricht an uns</h3>
  <%= form_for "/contacts" do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :Name %>
    <%= f.label :Email %>
    <%= f.text_field :Email %>
    <%= f.label :Nachricht %>
    <%= f.text_area :Nachricht %>
    <%= f.submit 'Senden' %>
  <% end %>
</div>